{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "lint": {},
        "typecheck": {
            "dependsOn": [
                "^typecheck"
            ],
            "cache": true
        },
        "format": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}